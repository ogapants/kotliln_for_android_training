<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.example.shou.kotlin_training.NextViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shou.kotlin_training.NextActivity">

        <TextView
            android:id="@+id/next_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@{viewModel.textString}"
            tools:text="@string/app_name" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/next_text"
            android:layout_centerInParent="true"
            android:text="@{viewModel.buttonString}"
            android:onClick="@{viewModel.onClick}"
            tools:text="@string/app_name" />

    </RelativeLayout>

</layout>
